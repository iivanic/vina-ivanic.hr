@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="related-products-list product-list">
        <div class="title" style="text-align: center; padding-bottom: 25px">
            <h2>@T("Products.RelatedProducts")</h2>
        </div>
        <div class="item-list">
            @foreach (var item in Model)
            {
                <div class="item-box">@await Html.PartialAsync("_ProductBox", item)</div>
            }
        </div>
    </div>
}